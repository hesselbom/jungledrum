  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "babel-plugin-jsx-pragmatic": "^1.0.2",
    "babel-plugin-transform-react-jsx": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.0.0",
    "classnames": "^2.2.5",
    "history": "^4.5.1",
    "js-cookie": "^2.1.4",
    "node-sass": "^4.5.0",
    "node-sass-globbing": "0.0.23",
    "normalize-scss": "^6.0.0",
    "npm-watch": "^0.1.8",
    "postcss": "^5.2.11",
    "preact": "^8.0.0",
    "preact-redux": "^2.0.0",
    "preact-router": "^2.4.5",
    "redux": "^3.6.0",
    "whatwg-fetch": "^2.0.3"
  },
  "standard": {
    "ignore": [
      "/admin/admin.js"
    ],
    "globals": [
      "fetch",
      "GLOBALS",
      "FormData",
      "plugins"
    ]
